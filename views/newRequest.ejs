<%-include('includes/header.ejs') -%> 
<!-- Displaying nav bar according to the user login status. 
    navadmin.ejs is the nav bar for admin while navguest.ejs is the nav bar for guest -->
<% 
if(user == 'admin'){%>
    <%-include('includes/navadmin.ejs') -%><%
}
else if (user == 'undefined' || user == 'guest'){%>
    <%-include('includes/navguest.ejs') -%><%
}
%>

<!-- Form to collect the request data -->
<section class="form">
    <h2> New request </h2>
    <form action="thankyou" method="POST" enctype="multipart/form-data">
        <div class="wrap">
            <label for="name" > Name: </label>
            <input type="text" placeholder="Enter your name" name="name" id="name">
        </div>

        <div class="wrap">
            <label for="phoneEmail" > Phone/Email: </label>
            <input type="text" placeholder="Enter contact number or email" name="phoneEmail" id="phoneEmail">    
        </div>
        
        <div class="wrap">
            <label for="carImage" > Photo: </label>
            <input type="file" id="carImage" name="carImage">
        </div>

        <div class="wrap">
            <label for="carDescription"> Car Description: </label>
            <textarea name="carDescription" id="carDescription" ></textarea>
        </div>

        <div class="wrap">
            <input type="submit" value="Submit!">
        </div>
    </form>
</section>

<%-include('includes/footer.ejs') -%> 